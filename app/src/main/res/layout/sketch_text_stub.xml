<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mask"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_yezi">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_yezi"
        android:layout_marginRight="@dimen/margin_yezi"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/text_primary"
            android:textSize="20sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_yezi"
        android:layout_marginRight="@dimen/margin_yezi"
        android:layout_marginTop="@dimen/margin_yezi"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textColor="@color/white" />
    <include
        android:id="@+id/sketch_color_pick_layout"
        layout="@layout/sketch_color_pick_layout" />
</LinearLayout>